<Grammar>

  <RootNode Type="SyntaxNode">
    <Comment>
      <summary>
        Defines a record from which all syntax nodes are derived.
      </summary>
    </Comment>

    <Member Name="Kind" Type="SyntaxKind">
      <Comment>
        <summary>
          Gets the kind of this syntax node.
        </summary>
      </Comment>
    </Member>

    <Member Name="Span" Type="SyntaxSpan">
      <Comment>
        <summary>
          Gets the absolute span of this node, not including trivia.
        </summary>
      </Comment>
    </Member>

    <Member Name="LeadingTrivia" Type="SyntaxList&lt;TriviaSyntax&gt;">
      <Comment>
        <summary>
          Gets the list of trivia that appears before this node in the source
          code.
        </summary>
      </Comment>
    </Member>

    <Member Name="TrailingTrivia" Type="SyntaxList&lt;TriviaSyntax&gt;">
      <Comment>
        <summary>
          Gets the list of trivia that appears before this node in the source
          code.
        </summary>
      </Comment>
    </Member>
  </RootNode>

  <AbstractNode Type="ExpressionSyntax" Base="SyntaxNode">
    <Comment>
      <summary>
        Defines a record from which expression nodes are derived.
      </summary>
    </Comment>
  </AbstractNode>

  <AbstractNode Type="StatementSyntax" Base="SyntaxNode">
    <Comment>
      <summary>
        Defines a record from which statement nodes are derived.
      </summary>
    </Comment>
  </AbstractNode>

  <AbstractNode Type="TriviaSyntax" Base="SyntaxNode">
    <Comment>
      <summary>
        Defines a record from which trivia syntax nodes are derived.
      </summary>
    </Comment>
  </AbstractNode>

  <AbstractNode Type="NameSyntax" Base="ExpressionSyntax">
    <Comment>
      <summary>
        Defines a record from which name syntax nodes are derived.
      </summary>
    </Comment>
  </AbstractNode>

</Grammar>